<h1>Add Doctor</h1>
<%= form_with(model: @doctor, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Doctor Name" %>
  </div>
  <div class="field">
    <%= f.label :practice %>
    <%= f.text_field :practice, required: true, placeholder: "Specialty" %>
  </div>
  <%= f.submit nil, class: "ui blue button" %>
<% end %>
