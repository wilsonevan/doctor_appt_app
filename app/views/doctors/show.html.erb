<div class="ui three column grid container">
  <div class="column">
    <img class="avatar" alt="Doct_avatar" src=<%= @doctor.profile_pic %> height="300"/>
  </div>
  <div class="column">
    <br /><br /><br />
      <div class="middle aligned content">
        <h1 class="header"><%= "Dr. #{@doctor.name}" %></h1>
        <h3>Specialty: <%= "#{@doctor.practice}" %></h1>
      </div>
  </div>
  <div class="column">
    <br /><br /><br /><br />
    <%= link_to "Schedule New Appointment", new_doctor_appointment_path(@doctor), class: "ui blue button inverted" %>
  </div>
</div>    
<hr />

<div class="ui two column grid container">
  <div class="column">
  
    <table class="ui striped table">  
      <thead class="center aligned">
        
        <tr>
          <th colspan="1"><h1>Current Patients</h1></th>
        </tr>
        </div>
      </thead>
      
    <% @doctor.users.each do |user| %>
      <tbody>
        <tr class="center aligned">
          <td><%= link_to user.full_name, user_path(user) %></td>
        </tr>
      </tbody>  
    <% end %>
    </table>
  </div>  

  <div class="column">
    <table class="ui striped table">  
      <thead class="center aligned">
        <tr>
          <th colspan="3">
            <h1>Upcoming Appointments</h1>
            <h3>Current Date & Time:  <%= Date.today.strftime("%m/%d/%y") + " - " + Time.now.strftime("%I:%M%p")%></h3>
          </th>
        </tr>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>User</th>
        </tr>
      </thead>
  
      <% @doctor.appointments.upcoming_appts.each do |appointment| %>
        <tbody>
          <tr class="center aligned">
            <% if appointment.date >= Date.today  %>
              <td><%= appointment.date.strftime("%m/%d/%y") %></td>
              <td><%= appointment.time.strftime("%I:%M%p") %></td>
              <td><%= appointment.user.full_name %></td>
            <% end %>  
        </tbody> 
      <% end %>
    </table>
  </div>
</div>